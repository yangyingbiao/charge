.btn{
  background:#628be3 linear-gradient(to right, #6290f5, #62b8f5);
  color:#fff;
  font-size: 28rpx;
  padding: 0rpx;
  min-height: 0;
  height: 88rpx;
  line-height:88rpx;
  width: 100% !important;
  font-weight: normal;
}

.btn.round{
  border-radius: 44rpx;
}

.btn.plain{
  background: none;
  border:1px solid #6290f5;
  color:#6290f5;
